<h2>BrainBreak</h2>
<p>Click for a 1-minute break idea</p>

<button onclick="brk()">Take Break</button>
<p id="out"></p>

<script>
function brk(){
  let b=[
    "Close your eyes and breathe deeply.",
    "Stretch your arms and neck.",
    "Look away from the screen.",
    "Drink water and relax."
  ];
  out.innerHTML = b[Math.floor(Math.random()*b.length)];
}
</script>

